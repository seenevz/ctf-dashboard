  <div class='form-container'>
    <%= form_with(model: @user, url: login_path, class: 'login-form') do |f| %>
      <%= f.label :username %>
      <%= f.text_field :username %>
      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit class: 'button', value: 'Login' %>
    <% end %>
  </div>
