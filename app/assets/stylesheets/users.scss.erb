@import "global";
@import "layout";
@import "partials";

// This root container is used for the sigup form
.login-root-container {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  background-image: url(<%= asset_path "landing_background2.jpg" %>);
  background-size: cover;
  background-position: center;
}

// User owned boards table

.user-boards-table {
  margin: 0 auto;
  width: 90%;
  border-collapse: collapse;
  table-display: fixed;

  td, th {
    border: 1px solid black;
    text-align: center;
    padding: 0.5em;
}
}

